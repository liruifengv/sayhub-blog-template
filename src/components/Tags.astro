---
const { tags, class: className = 'text-sm', showCount = false } = Astro.props
import PostTag from '~/components/Tag.astro'

---

{
  tags && Array.isArray(tags) && (
    <div class={className}>
      {tags.map((tag) => (
        <PostTag tagName={tag} showCount={showCount}>{tag}</PostTag>
      ))}
    </div>
  )
}

---
import { getCollection } from 'astro:content'
import PageLayout from '~/layouts/PageLayout.astro'
import Tags from '~/components/Tags.astro'

const allPosts = await getCollection('blog')
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())]

const meta = {
  title: `全部标签`,
  description: `全部标签`,
}
---

<PageLayout {meta}>
  <div class="w-full py-4 px-4 box-border md:w-[80%] xl:w-[60%] bg-white rounded-lg flex flex-col  dark:text-white dark:bg-[#24272d] border dark:border-[#353840]">
    <div class="text-2xl">全部标签</div>
    <Tags tags={tags} showCount={true} class="text-base mt-4" />
  </div>
</PageLayout>
